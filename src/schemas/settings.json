          "to_path": {
            "type": "Text",
            "config": {
              "label": "To Path"
            }
          },
          "is_permanent": {
            "type": "Boolean",
            "config": {
              "placeholder_false": "No",
              "placeholder_true": "Yes, redirect forever",
              "default_value": false,
              "label": "Is Permanent"
            }
          }
        },
        "label": "Redirects"
      }
    }
  },
