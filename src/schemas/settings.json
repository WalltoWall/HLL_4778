    "twitter_url": {
      "type": "Text",
      "config": {
        "label": "Twitter URL",
        "placeholder": "Link to Twitter Profile"
      }
    },
    "twitter_username": {
      "type": "Text",
      "config": {
        "label": "Twitter Username",
        "placeholder": "@example_account"
      }
    }
